<h1>All messages</h1>
<div id="app">
  {{ message }}
</div>
<% if current_user %>
  <%= form_tag "/messages", method: :post do %>
    <div>
      New message: <input type="text" name="body">
      <input type="submit" value="Submit">
    </div>
  <% end %>
<% end %>

<% @messages.each do |message| %>
  <div class='message'>
    <%= message.user.name %>: <%= message.body %>
  </div>
<% end %>
